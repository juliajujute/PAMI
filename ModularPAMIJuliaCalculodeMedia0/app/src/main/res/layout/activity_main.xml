<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:padding="20dp"
    android:background="@color/fundo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText android:id="@+id/edt_nota1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="50dp"
        android:padding="20dp"
        android:hint="Nota 1:"
        android:background="@color/campo"
        android:inputType="number"
        />

    <EditText android:id="@+id/edt_nota2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="50dp"
        android:padding="20dp"
        android:inputType="number"
        android:hint="Nota 2:"
        android:background="@color/campo"/>

    <EditText android:id="@+id/edt_nota3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/edt_nota1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="50dp"
        android:padding="20dp"
        android:hint="Nota 3:"
        android:background="@color/campo"/>

    <EditText android:id="@+id/edt_nota4"
        android:layout_width="wrap_content"
        android:inputType="number"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edt_nota2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="50dp"
        android:padding="20dp"
        android:hint="Nota 4:"
        android:background="@color/campo"/>

    <EditText android:id="@+id/edt_faltas"
        android:layout_width="match_parent"
        android:inputType="number"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edt_nota3"
        android:background="@color/campo"
        android:layout_marginTop="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:padding="15dp"
        android:hint="NÃºmero de faltas:"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button android:id="@+id/btn_calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/edt_faltas"
        android:padding="15dp"
        android:backgroundTint="@color/botao"
        android:text="CALCULAR"
        />

    <TextView android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_calcular"
        android:padding="20dp"
        android:background="@color/campo"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>